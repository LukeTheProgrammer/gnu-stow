# git aliases

alias g.a='git add'
alias g.b='git branch'
alias g.cb='git checkout -b'
alias g.cm='git commit -m'
alias g.co='git checkout'
alias g.del='git branch -D'
alias g.delr='git push origin --delete'
alias g.m='git merge'
alias g.pl='git pull'
alias g.ps='git push'
alias g.s='git status'

gdelete() {
    echo
    echo "Deleting local and remote branch: $1"
    echo
    
    # check for user confirmation
    read -p "Are you sure you want to delete this branch? (y/n) " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]
    then
        git branch -D $1
        git push origin --delete $1
    fi
}
